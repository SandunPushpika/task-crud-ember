<div class="fixed inset-0 bg-black/50 bg-opacity-10 flex items-center justify-center z-50">

  <div class="bg-white rounded-2xl shadow-xl p-6 w-96 relative">

    <button onclick={{@onCancel}} class="absolute top-3 right-3 text-gray-500 hover:text-gray-700" type="button">
      âœ•
    </button>

    <h2 class="text-xl font-semibold text-gray-800 mb-4">Create a task</h2>
    
    <div>
      <label for="task-title" class="block text-sm font-medium text-gray-700 mb-1">Task Title</label>
      <input id="task-title" type="text" placeholder="Enter task title"
        class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
        {{on "input" this.setTitle}} 
        value={{this.title}}
        />
      <label for="task-desc" class="block text-sm font-medium text-gray-700 mb-1 mt-4">Task Description</label>
      <textarea id="task-desc" rows="4" placeholder="Enter task description"
        class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
        {{on "input" this.setDescription}}
        value={{this.description}}
        ></textarea>  
    </div>

    <div class="flex justify-end gap-3 mt-5">
      <button class="px-4 py-2 rounded-lg bg-indigo-600 text-white hover:bg-indigo-700" type="button" onclick={{this.createTask}}>Add Task</button>
    </div>
  </div>
</div>